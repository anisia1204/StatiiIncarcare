    <div class="events">
        <ul class="wrap">

            <li class="events-group">
                <div class="top-info"><span>Monday</span></div>
                <ul>
                    @foreach (var item in Model.Days.Where(x => x.date.DayOfWeek == DayOfWeek.Monday).FirstOrDefault().rezervari)
                    {
                        <li class="single-event" data-start="@item.StartDate.Value.ToString("HH:mm")" data-end="@item.EndDate.Value.ToString("HH:mm")" data-event="event-1">
