@model StatiiIncarcare.Models.ViewModels.WeekCalendar


    <a asp-action="PrevWeek" asp-controller = "Disponibilitate" asp-route-id = "@Model.IdPriza" class="btn btn-sm btn-success">
         <i class="fa-solid fa-plus"></i> Saptamana anterioara
    </a>

    <span> @Model.CurrentWeek.ToShortDateString() - @Model.CurrentWeek.AddDays(6).ToShortDateString()</span>

    <a asp-action="NextWeek" asp-controller = "Disponibilitate" asp-route-id = "@Model.IdPriza" class="btn btn-sm btn-success">
         <i class="fa-solid fa-plus"></i> Urmatoarea saptamana
    </a>


<br />
