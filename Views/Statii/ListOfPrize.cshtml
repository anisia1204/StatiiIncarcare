@model IEnumerable<StatiiIncarcare.Models.DB.Priza>

<h5 class="card-title">Prizele Statiei</h5>
<div class="card" style="width: 25rem;">
  <ul class="list-group list-group-flush">
      <li class="list-group-item"> 
            <table class="table table-striped table-bordered">  
            <thead class="bg-dark text-white">  
            <tr>
                    <th> Numarul Prizei</th>
                    <th>Name</th>  
                    <th>Booking</th>
                    <th>Disponibilitate</th>
            </tr>
            </thead>  
            <tbody>  
                @foreach (var item in Model)  
                {  
                    <tr>  
                        <td>@item.IdPriza</td>
                        <td>@item.IdTipNavigation.NumePriza</td>  
                        <td><a asp-action="BookNow" asp-controller = "Booking" asp-route-id = "@item.IdPriza" class="btn btn-sm btn-success"/>
                            <i class="fa-solid fa-plus"></i> Book Now</td>
                        <td><a asp-action="Index" asp-controller = "Disponibilitate" asp-route-id = "@item.IdPriza" class="btn btn-sm btn-success"/>
                            <i class="fa-solid fa-plus"></i> Disponibilitate</td>
                    </tr>  
                }  
            </tbody>  
        </table>  
  </ul>
</div>

